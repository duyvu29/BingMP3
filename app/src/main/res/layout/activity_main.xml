<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/img_18"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textviewNoidung"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="Tên bài hát"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTimestar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="475dp"
        android:layout_marginBottom="142dp"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textTimeStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="285dp"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="138dp"
        android:layout_toEndOf="@+id/textTimestar"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <ImageButton

        android:id="@+id/imgNext"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="60dp"
        android:background="@null"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        android:minHeight="48dp"
        android:src="@drawable/next"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/imageRev"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="60dp"
        android:background="@null"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        android:minHeight="48dp"
        android:src="@drawable/rev"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/imgStop"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@+id/imgNext"
        android:background="@null"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        android:minHeight="48dp"
        android:src="@drawable/stop"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/imagePlay"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@+id/imgStop"
        android:layout_toEndOf="@+id/imageRev"
        android:background="@null"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        android:minHeight="48dp"
        android:src="@drawable/play"
        tools:ignore="UnknownId,TouchTargetSizeCheck" />

    <SeekBar
        android:id="@+id/seebarMusic"
        android:layout_width="378dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="480dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="124dp" />

    <ImageView
        android:id="@+id/imageViewCD"
        android:layout_width="359dp"
        android:layout_height="356dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="21dp"
        app:srcCompat="@drawable/uuuuu" />


</RelativeLayout>